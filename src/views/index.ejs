<div class="lg:col-span-9 space-y-8">
  <section class="ornate-panel" id="news">
    <div class="ornate-header"><h3>Últimas Notícias</h3></div>
    <div class="p-6 grid md:grid-cols-3 gap-6">
      <% if (latestNews && latestNews.length) { %>
        <a href="/noticias/<%= latestNews[0].id %>" class="md:col-span-2 group relative rounded-lg overflow-hidden">
          <img src="<%= latestNews[0].imagem_url || 'https://placehold.co/800x500' %>" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
          <div class="absolute bottom-0 left-0 p-6">
            <span class="text-xs bg-red-600 text-white font-bold uppercase px-2 py-1 rounded"><%= latestNews[0].categoria || 'Geral' %></span>
            <h2 class="font-fantasy text-3xl text-white mt-2"><%= latestNews[0].titulo %></h2>
          </div>
        </a>
        <div class="md:col-span-1 space-y-4">
          <% latestNews.slice(1).forEach(n => { %>
            <a href="/noticias/<%= n.id %>" class="block group">
              <h4 class="font-bold text-white group-hover:text-amber-400"><%= n.titulo %></h4>
              <p class="text-sm text-slate-400"><%= new Date(n.data_publicacao).toLocaleDateString('pt-BR') %> - <%= n.categoria || 'Geral' %></p>
            </a>
          <% }) %>
        </div>
      <% } else { %>
        <p class="p-6 text-slate-400">Sem notícias por enquanto.</p>
      <% } %>
    </div>
  </section>

  <section class="ornate-panel">
    <div class="ornate-header"><h3>Da Comunidade</h3></div>
    <div class="p-6 grid md:grid-cols-3 gap-6">
      <% (communityLatest || []).forEach(p => { %>
        <a href="/comunidade/<%= p.id %>" class="group block rounded-lg overflow-hidden">
          <img src="<%= p.imagem_url || 'https://placehold.co/800x400' %>" class="w-full h-40 object-cover group-hover:scale-105 transition-transform"/>
          <div class="p-3">
            <h4 class="font-bold text-white group-hover:text-amber-400"><%= p.titulo %></h4>
            <p class="text-xs text-slate-400"><%= new Date(p.publicado_em).toLocaleDateString('pt-BR') %> — <%= p.autor %></p>
          </div>
        </a>
      <% }) %>
    </div>
  </section>
</div>

<div class="lg:col-span-3 space-y-6">
  <div class="ornate-panel">
    <div class="ornate-header"><h4>Acesso ao Jogo</h4></div>
    <form action="/minha-conta/login" method="post" class="p-4 space-y-3">
      <input name="username" type="text" placeholder="Nome de Usuário" class="w-full bg-slate-900/70 border border-slate-700 rounded px-3 py-2 text-sm focus:outline-none focus:border-violet-500">
      <input name="password" type="password" placeholder="Senha" class="w-full bg-slate-900/70 border border-slate-700 rounded px-3 py-2 text-sm focus:outline-none focus:border-violet-500">
      <button class="w-full bg-violet-700 hover:bg-violet-600 text-white font-bold py-2.5 rounded-lg uppercase tracking-wider">Entrar</button>
    </form>
    <div class="text-xs text-center text-slate-400 p-2 border-t border-slate-800/50">
      <a href="/minha-conta/registrar" class="hover:text-white">Criar Conta</a>
    </div>
  </div>

  <div class="ornate-panel"><div class="ornate-header"><h4>Status do Servidor</h4></div>
    <div class="p-4 text-center">
      <div class="flex items-center justify-center space-x-2">
        <div class="w-3 h-3 rounded-full bg-green-500 animate-pulse"></div>
        <span class="text-green-400 font-semibold">Online</span>
      </div>
      <p class="text-sm text-slate-400 mt-1">1.257 Heróis Online</p>
    </div>
  </div>

  <div class="ornate-panel"><div class="ornate-header"><h4>Eventos Ativos</h4></div>
    <div class="p-4 text-center">
      <p class="font-bold text-amber-400">Purificação dos Cristais</p>
      <p class="text-sm text-slate-400">Termina em: <span class="font-mono text-white">4d 12h 30m</span></p>
    </div>
  </div>
</div>
