<div class="lg:col-span-12 space-y-8">
    <% if (latestPost) { %>
        <section class="ornate-panel">
            <div class="ornate-header"><h3>Em Destaque na Comunidade</h3></div>
            <a href="/comunidade/<%= latestPost.id %>" class="block group">
                <div class="p-6 flex flex-col md:flex-row items-center gap-6">
                    <div class="md:w-1/3 flex-shrink-0">
                        <img src="<%= latestPost.imagem_url || 'https://placehold.co/800x400' %>" class="w-full h-auto object-cover rounded-lg shadow-lg">
                    </div>
                    <div class="md:w-2/3">
                        <h2 class="font-fantasy text-3xl text-amber-400 group-hover:text-amber-300 transition-colors"><%= latestPost.titulo %></h2>
                        <p class="text-sm text-slate-400 mt-1 mb-3">Por <strong><%= latestPost.autor %></strong> em <%= new Date(latestPost.publicado_em).toLocaleDateString('pt-BR') %></p>
                        <p class="text-slate-300 leading-relaxed"><%= (latestPost.conteudo || '').slice(0, 200) %>...</p>
                    </div>
                </div>
            </a>
        </section>
    <% } %>

    <section class="ornate-panel">
        <div class="ornate-header"><h3>Últimos Tópicos</h3></div>
        <div class="p-2 md:p-4">
            <div class="hidden md:flex text-sm font-bold text-slate-400 uppercase border-b border-slate-700 px-4 py-2">
                <div class="w-3/5">Tópico</div>
                <div class="w-1/5 text-center">Estatísticas</div>
                <div class="w-1/5 text-right">Última Atividade</div>
            </div>
            <% (posts || []).forEach(post => { %>
                <a href="/comunidade/<%= post.id %>" class="flex flex-col md:flex-row items-center hover:bg-slate-800/50 rounded-lg px-4 py-3 border-b border-slate-800/50 transition-colors">
                    <div class="w-full md:w-3/5 flex items-center mb-2 md:mb-0">
                        <div class="ml-4">
                            <h4 class="font-bold text-white group-hover:text-amber-400"><%= post.titulo %></h4>
                            <p class="text-xs text-slate-400">Por <%= post.autor %></p>
                        </div>
                    </div>
                    <div class="w-full md:w-1/5 text-center text-xs text-slate-400 mb-2 md:mb-0">
                        <p>0 Respostas / 0 Likes</p> 
                    </div>
                    <div class="w-full md:w-1/5 text-right text-xs text-slate-500">
                        <%= new Date(post.publicado_em).toLocaleDateString('pt-BR') %>
                    </div>
                </a>
            <% }) %>
        </div>
    </section>
</div>