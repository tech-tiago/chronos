<% layout('layouts/main') %>
<div class="lg:col-span-12 ornate-panel">
  <div class="ornate-header"><h3>Loja</h3></div>
  <div class="p-6 grid md:grid-cols-3 gap-6">
    <% (items||[]).forEach(it => { %>
      <div class="ornate-panel bg-slate-900/50 p-4 flex flex-col">
        <img src="<%= it.imagem_url || 'https://placehold.co/400x250' %>" class="rounded mb-4"/>
        <h4 class="font-bold text-xl text-amber-400"><%= it.nome %></h4>
        <p class="text-sm text-slate-400 mb-4 flex-grow"><%= it.descricao %></p>
        <button class="mt-auto w-full bg-amber-600 hover:bg-amber-500 text-white font-bold py-2 rounded-lg">
          Comprar â€” <%= (it.preco/100).toLocaleString('pt-BR',{style:'currency',currency:'BRL'}) %>
        </button>
      </div>
    <% }) %>
  </div>
</div>
