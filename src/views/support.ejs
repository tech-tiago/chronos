<div class="lg:col-span-12 ornate-panel">
  <div class="ornate-header"><h3>Suporte</h3></div>
  <div class="p-6 grid md:grid-cols-3 gap-6">
    <form action="/suporte" method="post" class="md:col-span-1 space-y-3">
      <input name="assunto" class="w-full bg-slate-900/70 border border-slate-700 rounded px-3 py-2" placeholder="Assunto">
      <textarea name="mensagem" rows="6" class="w-full bg-slate-900/70 border border-slate-700 rounded p-3" placeholder="Descreva seu problema"></textarea>
      <button class="w-full bg-violet-700 hover:bg-violet-600 text-white font-bold py-2 rounded">Enviar Ticket</button>
    </form>
    <div class="md:col-span-2">
      <h4 class="font-bold text-white mb-3">Seus Tickets</h4>
      <ul class="space-y-3">
        <% (tickets||[]).forEach(t => { %>
          <li class="bg-slate-900/40 p-3 rounded">
            <p class="font-bold text-amber-400"><%= t.assunto %> â€” <span class="text-xs"><%= t.status %></span></p>
            <p class="text-sm text-slate-300"><%= t.mensagem %></p>
            <p class="text-xs text-slate-500"><%= new Date(t.criado_em).toLocaleString('pt-BR') %></p>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
</div>
