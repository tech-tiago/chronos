<div class="lg:col-span-12 ornate-panel">
  <div class="ornate-header"><h3><%= title %></h3></div>
  <div class="p-6 grid md:grid-cols-3 gap-6">

    <% (items || []).forEach(n => { %>

      <a href="/noticias/<%= n.id %>" class="block group col-span-1 rounded-lg overflow-hidden bg-slate-900/30 transition-transform hover:scale-105">
        <article>
          <img src="<%= n.imagem_url || 'https://placehold.co/800x500' %>" class="w-full h-48 object-cover"/>
          <div class="p-4">
            <h4 class="font-bold text-white group-hover:text-amber-400"><%= n.titulo %></h4>
            <p class="text-xs text-slate-400"><%= new Date(n.data_publicacao).toLocaleDateString('pt-BR') %> â€” <%= n.categoria || 'Geral' %></p>
            <p class="text-slate-300 mt-2"><%= n.resumo || (n.conteudo || '').slice(0,120) %>...</p>
          </div>
        </article>
      </a>
      
    <% }) %> </div>
</div>