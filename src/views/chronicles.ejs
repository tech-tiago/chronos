<div class="lg:col-span-12 ornate-panel">
  <div class="ornate-header"><h3>Crônicas de Chronos</h3></div>
  <div class="p-6 grid md:grid-cols-3 gap-6">
    <% (items || []).forEach(c => { %>
      <a class="block group rounded-lg overflow-hidden bg-slate-900/30">
        <img src="<%= c.capa_url || 'https://placehold.co/400x300' %>" class="w-full h-48 object-cover"/>
        <div class="p-4">
          <h4 class="font-bold text-white group-hover:text-amber-400"><%= c.titulo %></h4>
          <p class="text-xs text-slate-400"><%= c.categoria %> — <%= new Date(c.publicado_em).toLocaleDateString('pt-BR') %></p>
          <p class="text-slate-300 mt-2"><%= (c.conteudo || '').slice(0,160) %>...</p>
        </div>
      </a>
    <% }) %>
  </div>
</div>
