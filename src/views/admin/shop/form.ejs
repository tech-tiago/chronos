<div class="bg-white p-6 rounded-lg shadow-md">
    <form action="<%= (typeof item.id !== 'undefined') ? '/admin/loja/' + item.id + '/editar' : '/admin/loja/novo' %>" method="POST">
        
        <div class="mb-4">
            <label for="nome" class="block text-gray-700 font-bold mb-2">Nome do Item</label>
            <input type="text" id="nome" name="nome" class="w-full border rounded p-2" value="<%= item.nome || '' %>" required>
        </div>

        <div class="mb-4">
            <label for="descricao" class="block text-gray-700 font-bold mb-2">Descrição</label>
            <textarea id="descricao" name="descricao" rows="4" class="w-full border rounded p-2"><%= item.descricao || '' %></textarea>
        </div>

        <div class="grid grid-cols-2 gap-6">
            <div class="mb-4">
                <label for="preco" class="block text-gray-700 font-bold mb-2">Preço (Ex: 19.99)</label>
                <input type="number" step="0.01" id="preco" name="preco" class="w-full border rounded p-2" value="<%= item.preco || '' %>" required>
            </div>
            <div class="mb-4">
                <label for="tipo_item" class="block text-gray-700 font-bold mb-2">Tipo de Item</label>
                <select id="tipo_item" name="tipo_item" class="w-full border rounded p-2" required>
                    <% const tipos = ['cosmetico', 'montaria', 'diamante', 'pacote_vip', 'item_consumivel']; %>
                    <% tipos.forEach(tipo => { %>
                        <option value="<%= tipo %>" <%= (item.tipo_item === tipo) ? 'selected' : '' %> >
                            <%= tipo.charAt(0).toUpperCase() + tipo.slice(1).replace('_', ' ') %>
                        </option>
                    <% }) %>
                </select>
            </div>
        </div>

        <div class="mb-4">
            <label for="imagem_url" class="block text-gray-700 font-bold mb-2">URL da Imagem</label>
            <input type="text" id="imagem_url" name="imagem_url" class="w-full border rounded p-2" value="<%= item.imagem_url || '' %>">
        </div>

        <div>
            <button type="submit" class="bg-green-600 text-white py-2 px-6 rounded-lg hover:bg-green-700">
                <%= (typeof item.id !== 'undefined') ? 'Salvar Alterações' : 'Criar Item' %>
            </button>
            <a href="/admin/loja" class="text-gray-600 ml-4 hover:underline">Cancelar</a>
        </div>
    </form>
</div>