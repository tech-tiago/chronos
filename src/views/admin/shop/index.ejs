<div class="mb-6">
    <a href="/admin/loja/novo" class="bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700">
        + Novo Item
    </a>
</div>

<div class="bg-white p-6 rounded-lg shadow-md">
    <table class="w-full text-left">
        <thead>
            <tr class="border-b">
                <th class="py-2">ID</th>
                <th>Nome</th>
                <th>Tipo</th>
                <th>Preço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach(item => { %>
                <tr class="border-b hover:bg-gray-50">
                    <td class="py-3"><%= item.id %></td>
                    <td><%= item.nome %></td>
                    <td><%= item.tipo_item %></td>
                    <td>R$ <%= (item.preco / 100).toFixed(2).replace('.', ',') %></td>
                    <td>
                        <a href="/admin/loja/<%= item.id %>/editar" class="text-blue-600 hover:underline mr-4">Editar</a>
                        <form action="/admin/loja/<%= item.id %>/deletar" method="POST" class="inline" onsubmit="return confirm('Tem certeza que deseja deletar este item?');">
                            <button type="submit" class="text-red-600 hover:underline">Deletar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>